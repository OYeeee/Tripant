<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="INFO">
    <Properties>
    	<Property name="LOG_DATEFORMAT_PATTERN">{HH:mm:ss.SSS}</Property>
        <Property name="LOG_LEVEL_PATTERN">{-%5p}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=green, DEBUG=green bold, TRACE=blue} %style{%-40.40C{1.}}{cyan} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}</Property>
    </Properties>
    <Appenders>
    	 <Console name="ConsoleLog" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false" pattern="%d${LOG_DATEFORMAT_PATTERN} %highlight${LOG_LEVEL_PATTERN}"/>
        </Console>
        <RollingFile name="FileLog"
                    fileName="./logs/spring.log"
                    filePattern="./logs/spring-%d{yyyy-MM-dd}-%i.log">
           <PatternLayout pattern="${LOG_PATTERN}" charset="UTF-8" />
           <Policies>
               <TimeBasedTriggeringPolicy interval="1" />
               <SizeBasedTriggeringPolicy size="10000KB" />
           </Policies>
           <DefaultRolloverStrategy max="20" fileIndex="min" />
       </RollingFile>
    </Appenders>
    <Loggers>
	    <Root level="info">
	        <AppenderRef ref="ConsoleLog" />
	        <AppenderRef ref="FileLog" />
	    </Root>
	   <Logger name="mclass.store.tripant.member" level="debug" additivity="false">
	       <AppenderRef ref="ConsoleLog" />
	   </Logger>
	   <Logger name="mclass.store.tripant.plan" level="debug" additivity="false">
	       <AppenderRef ref="ConsoleLog" />
	   </Logger>
	   <Logger name="mclass.store.tripant.trip" level="debug" additivity="false">
	       <AppenderRef ref="ConsoleLog" />
	   </Logger>
	   <Logger name="mclass.store.tripant.admin" level="debug" additivity="false">
	       <AppenderRef ref="ConsoleLog" />
	   </Logger>
	   <Logger name="mclass.store.tripant.diary" level="debug" additivity="false">
	       <AppenderRef ref="ConsoleLog" />
	   </Logger>
	</Loggers>
</Configuration>
